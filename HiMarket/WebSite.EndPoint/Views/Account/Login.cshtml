@model WebSite.EndPoint.Models.ViewModels.User.LoginViewModel

@{
    ViewData["Title"] = "ورود به حساب";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>ورود به حساب</h1>

<hr />
<main class="page-content">
    <div class="container">
        <div class="auth-wrapper">
            <div class="auth-form shadow-around">
                <div class="site-logo">
                    <a href="#">
                        <img src="~/theme/assets/images/logo.png">
                    </a>
                </div>
                <div class="auth-form-title">
                    ورود به های مارکت
                </div>
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger">@ViewData["Error"]</div>
                    <div class="form-element-row">
                        <label asp-for="Email" class="label-element">ایمیل</label>
                        <div class="form-element-with-icon">
                            <input asp-for="Email" class="input-element">
                            <span asp-validation-for="Email" class="text-danger"></span>
                           @* <i class="fad fa-mobile-alt"></i>*@
                        </div>
                    </div>

                    <div class="form-element-row">
                        <label  class="label-element">
                            <span class="d-flex justify-content-between">                              
                                <a asp-controller="Account" asp-action="ForgotPassword" class="link-with-border-bottom">رمز عبور خود را فراموش کرده‌ام</a>
                            </span>
                        </label>
                        <div class="form-element-with-icon">
                            <input asp-for="Password" class="form-control">
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <i class="fad fa-key-skeleton"></i>
                        </div>

                    </div>
                    <div class="form-element-row">
                        <label class="container-checkbox">
                            مرا به خاطر داشته باش
                            <input asp-for="IsPersistent" type="checkbox" checked="checked">
                            <span class="checkmark"></span>
                        </label>
                    </div>
                    <div class="form-element-row text-left">
                        <input type="submit" value="ورود به های مارکت" class="btn-element btn-info-element">
                            @*<i class="fad fa-sign-in-alt"></i>*@
                        
                        </input>
                    </div>
                    <input type="hidden" asp-for="ReturnUrl" class="form-control" />
                </form>
                <div class="auth-form-footer">
                    <span>کاربر جدید هستید؟</span>
                    <a asp-controller="Account" asp-action="Register" class="link--with-border-bottom">ثبت نام در های مارکت</a>
                </div>
            </div>
        </div>
    </div>
</main>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }

