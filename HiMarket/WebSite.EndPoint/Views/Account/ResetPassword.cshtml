@model WebSite.EndPoint.Models.ViewModels.User.ResetPasswordViewModel

@{
    ViewData["Title"] = "تغییر رمز عبور";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main class="page-content">
    <div class="container">
        <div class="auth-wrapper">
            <div class="auth-form shadow-around">
                <div class="site-logo">
                    <a href="#">
                        <img src="~/theme/assets/images/logo.png" alt="logo">
                    </a>
                </div>
                <div class="auth-form-title">
                    تغییر رمز عبور
                </div>
                <form asp-action="ResetPasssword">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-element-row">
                        <label asp-for="Password" class="label-element">کلمه عبور</label>
                        <span asp-validation-for="Password"></span>
                        <div class="form-element-with-icon">
                            <input type="text" class="input-element" asp-for="Password">                          
                        </div>
                    </div>
                    <div class="form-element-row">
                        <label asp-for="ConfirmPassword" class="label-element">تکرار کلمه عبور</label>
                        <span asp-validation-for="ConfirmPassword"></span>
                        <div class="form-element-with-icon">
                            <input type="text"  class="input-element" asp-for="ConfirmPassword">                           
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="UserId" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="Token" class="form-control" />
                    </div>
                    <div class="form-element-row text-left">
                        <input type="submit" value="تغییر رمز عبور" asp-controller="Account" asp-action="ResetPassword" class="btn-element btn-success-element">
                                                                          
                    </div>

                </form>
                <div class="auth-form-footer">
                    <span>کاربر جدید هستید؟</span>
                    <a asp-controller="Account" asp-action="Register" class="link--with-border-bottom">ثبت نام در همتا</a>
                </div>
            </div>
        </div>
    </div>
</main>

